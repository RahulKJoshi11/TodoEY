@page
@model TaskList.Pages.LoginModel
@{
    
}

<h1>User Login</h1>


<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LoginUser.UserId"></label>
            </div>
            <div class="col-6">
                <input asp-for="LoginUser.UserId" class="form-control" />
            </div>
            <span asp-validation-for="LoginUser.UserId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="LoginUser.Password"></label>
            </div>
            <div class="col-6">
                <input asp-for="LoginUser.Password" class="form-control" />
            </div>
            <span asp-validation-for="LoginUser.Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-1">
                <input type="submit" value="Login" class="btn btn-primary form control" />
            </div>
            <div class="col-2">
                <a asp-page="Register" class="btn btn-success form-control">Register</a>
            </div>
            <span class="text-danger">@ViewData["LoginFailed"]</span>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}