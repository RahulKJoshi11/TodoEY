@page
@model TaskList.Pages.TaskPages.CreateModel
@{
}

<br />
<h2 class="text-info">Create Task</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TaskProp.TaskName"></label>
            </div>
            <div class="col-6">
                <input asp-for="TaskProp.TaskName" class="form-control" />
            </div>
            <span asp-validation-for="TaskProp.TaskName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TaskProp.Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="TaskProp.Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="TaskProp.Date"></label>
            </div>
            <div class="col-6">
                <input asp-for="TaskProp.Date" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-1">
                <input type="submit" value="Create" class="btn btn-primary form control" />
            </div>
            <div class="col-2">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}