@page
@model TaskList.Pages.RegisterModel
@{
}

<h1>User Registration</h1>

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="UserRegister.UserId"></label>
            </div>
            <div class="col-6">
                <input asp-for="UserRegister.UserId" class="form-control" />
            </div>
            <span asp-validation-for="UserRegister.UserId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="UserRegister.Password"></label>
            </div>
            <div class="col-6">
                <input asp-for="UserRegister.Password" class="form-control" />
            </div>
            <span asp-validation-for="UserRegister.Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4"></div>
            <div class="col-1">
                <input type="submit" value="Register" class="btn btn-primary form control" />
            </div>
            <div class="col-2">
                <a asp-page="Login" class="btn btn-success form-control">Back to Login</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}